<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <BlazorEnableCompression>false</BlazorEnableCompression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0-preview.7.21378.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0-preview.7.21378.6" PrivateAssets="all" />
    <PackageReference Include="Octokit" Version="0.50.0" />
    <PackageReference Include="semver" Version="2.0.6" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\js\" />
  </ItemGroup>

  <Target Name="BuildCssAndCopyJs" BeforeTargets="Compile">
    <Exec Command="npx sass custom-bootstrap.scss wwwroot/css/bootstrap.css" />
    <Copy SourceFiles="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js" DestinationFolder="wwwroot/js"/>
  </Target>

  <Target Name="NpmInstall" Inputs="package.json" Outputs="node_modules/.npm_install" BeforeTargets="BuildCssAndCopyJs">
    <Touch Files="node_modules/.npm_install" ForceTouch="true" AlwaysCreate="true" />
    <Exec Command="npm install" />
  </Target>

</Project>
